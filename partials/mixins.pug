mixin comments(qtd)
  - var n = 0
  while n < qtd
    - n++
    .widget-video--info--comments--comment
      .widget-video--info--comments--info
        .widget-video--info--comments--info--image
          img(src="images/profile-image.jpg", alt="")
        div
          .widget-video--info--comments--info--content
            a.widget-video--info--comments--info--content--name
              | Rodrigo
            span.widget-video--info--comments--info--content--comment
              | Lorem Ipsum Top Eclemet
          .widget-video--info--comments--info--time
            | 2h
      .widget-video--info--comments--reply
        a(href="#")
          i.icon-reply-all
            
mixin widget(header, classVideo)
  .widget
    if (header === true)
      include widget/widget-header
    
    
    .widget-video--iframe(class=classVideo)
      iframe(width="100%" height="100%" src="https://www.youtube.com/embed/mSYc0nUNK8A?modestbranding=1&autohide=1&showinfo=0&controls=0" frameborder="0" allowfullscreen)
    
    include widget/widget-info
